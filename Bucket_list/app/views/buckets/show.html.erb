<h1><%= @bucket.category %></h1>
	<div class="waves-effect waves-light btn">
		<%= link_to 'New', new_bucket_activity_path(@bucket) %>
	</div>


<div class="row">
	<% @activities.each do |activity| %>
		<div class="col s12 m6 l3">
			<div class="card blue darken-1">
				<div class="card-content white-text">
					<span class="card-title"><%= activity.name %></span>
				</div>
				<div class="card-action">
 					<%= link_to 'Edit', edit_bucket_activity_path(@bucket, activity) %>
					<%= link_to 'Delete', bucket_activity_path(@bucket, activity), method: :delete %>
				</div>
			</div>
		</div>	 	
	<% end %>
</div>